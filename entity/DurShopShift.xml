<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">

    <entity entity-name="DurShopShift" package-name="durion.shopmgr" table-name="DUR_SHOP_SHIFT">
        <description>Work shifts for scheduling mechanics</description>
        <field name="shiftId" type="id" is-pk="true"/>
        <field name="shiftName" type="text-medium" required="true">
            <description>Morning Shift, Evening Shift, etc.</description>
        </field>
        <field name="shiftCode" type="text-short">
            <description>Short code like AM, PM, NIGHT</description>
        </field>
        <field name="startTime" type="time" required="true"/>
        <field name="endTime" type="time" required="true"/>
        <field name="daysOfWeek" type="text-short">
            <description>Comma-separated: MON,TUE,WED,THU,FRI,SAT,SUN</description>
        </field>
        <field name="statusId" type="text-short" default="SHIFT_ACTIVE">
            <description>SHIFT_ACTIVE, SHIFT_INACTIVE</description>
        </field>
        <field name="notes" type="text-long"/>
        <field name="createdDate" type="date-time" default="ec.user.nowTimestamp"/>
        <field name="updatedDate" type="date-time" update="ec.user.nowTimestamp"/>
    </entity>

</entities>
